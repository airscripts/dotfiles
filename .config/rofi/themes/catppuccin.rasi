@theme "/dev/null"

* {
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;
  bg: #1E1D2F;
  fg: #D9E0EE;
  ac: #8CAAEE;
  background-color: @bg;
  font: "FiraCode Nerd Font 12";
}

window {
  width: 35%;
}

element {
  padding: 6 0;
  text-color: @fg;
}

element selected {
  text-color: @ac;
}

element-text {
  text-color: inherit;
  vertical-align: 0.5;
  background-color: inherit;
}

element-icon {
  size: 22;
  padding: 0 8;
}

entry {
  padding: 12;
  text-color: @bg;
  background-color: @ac;
}

inputbar {
  children: [prompt, entry];
}

listview {
  lines: 8;
  columns: 1;
  padding: 8 12;
  background-color: @bg;
}

mainbox {
  children: [inputbar, listview];
}

prompt {
  enabled: true;
  text-color: @bg;
  padding: 12 0 0 12;
  background-color: @ac;
}

